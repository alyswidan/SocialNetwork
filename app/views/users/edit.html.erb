<h1>Editing User</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, html: { multipart: true }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name %>

      <%= f.label :nickname %>
      <%= f.text_field :nickname %>

      <%= f.label :birthdate %>
      <%= f.date_select :birthdate, id: :user_birthdate %>

      <%= f.label :gender %>
      <%= f.select :gender, options_for_select(User.genders.map {|k,v| [k.to_s.humanize,k]}) %>

      <%= f.label :marital_status %>
      <%= f.select :marital_status, options_for_select(User. marital_statuses.map {|k,v| [k.to_s.humanize,k]}) %>

      <%= f.label :city %>
      <%= f.select :city,
                   options_for_select(City.
                       all.
                       map {|city| [city.name,city.id]}) %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :picture, "Avatar" %>
      <%= f.file_field :picture %>

      <%= f.submit "Edit!", class: "btn btn-primary" %>
<% end %>
    <div class="gravatar_edit">
      <a href="http://gravatar.com/emails" target=_blank>change</a>
    </div>
  </div>
</div>
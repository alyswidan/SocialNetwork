<% provide(:title, @user.full_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.full_name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats'%>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render'friends_form' if logged_in?%>
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="microposts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>

</div>
<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
      <%= f.label :nickname %>
      <%= f.text_field :nickname %>
      <%= f.label :birhdate %>
      <%= f.text_field :birthdate, :class => "datepicker" %>
      <%= f.label :gender %>
      <%= f.select :gender, options_for_select(User.genders.map {|k,v| [k.to_s.humanize,k]}) %>
      <%= f.label :marital_status %>
      <%= f.select :marital_status, options_for_select(User. marital_statuses.map {|k,v| [k.to_s.humanize,k]}) %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit "Sign up!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user,  html: { multipart: true }) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
      <%= f.label :nickname %>
      <%= f.text_field :nickname %>
      <%= f.label :birhdate %>
      <%= f.text_field :birthdate, :class => "datepicker" %>
      <%= f.label :gender %>
      <%= f.select :gender, options_for_select(User.genders.map {|k,v| [k.to_s.humanize,k]}) %>
      <%= f.label :marital_status %>
      <%= f.select :marital_status, options_for_select(User. marital_statuses.map {|k,v| [k.to_s.humanize,k]}) %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      <span class="picture">
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
      </span>
      <%= f.submit "Sign up!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<script type="text/javascript">
    $('#user_picture').bind('change', function() {
        size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
    });
</script>

<div class="col-xs-12 col-sm-12 col-md-3">


  <%= link_to user do%>
    <img src="<%= user.picture.url || "http://lorempixel.com/250/140/sports" %>"
         class="img-responsive profile-photo" />
  <%end %>
</div>

<div class="col-xs-12 col-sm-12 col-md-7">

  <h3>
    <%= link_to user.full_name, user%>
  </h3>

  <p> <%= user.nickname %></p>
  <p> <%= user.about_me %></p>

  <% if (not current_user.is_friends_with? user) && (user != current_user) %>
  <button class="btn-primary">Add Friend</button>
  <%end%>
</div>
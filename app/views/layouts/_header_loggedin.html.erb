<!-- Header ================================================= -->
<header id="header">
  <nav class="navbar navbar-default navbar-fixed-top menu">
    <div class="container">

      <div class="navbar-header">

        <button type="button"
                class="navbar-toggle collapsed"
                data-toggle="collapse"
                data-target="#bs-example-navbar-collapse-1"
                aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <%= link_to root_path, class: "navbar-brand" do %>
          <%= image_tag "logo.png", alt: "logo"%>
        <% end %>

      </div>



      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <ul class="nav navbar-nav navbar-right main-menu">
          <li class="dropdown">
            <%= link_to "Advanced Search", advanced_search_path %>
          </li>
          <li class="dropdown">
            <%= link_to "News feed", home_path %>
          </li>
          <li class="dropdown">
            <%= link_to "Profile", user_path(current_user)  %>
          </li>
          <li class="dropdown">
            <%= link_to "Friend requests", received_requests_user_path(current_user) %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        </ul>
        <%= form_for :advanced_search,
                      url: advanced_search_path,
                      html:{class:"navbar-form navbar-right hidden-sm"} do |f| %>
          <div class="input-group">
            <%= f.text_field :simple,
                              class: 'form-control',
                              placeholder:"Search friends" %>
            <span class="input-group-btn">
              <%= f.submit "Search", class: "btn btn-primary" %>
            </span>
          </div>
        <% end %>

      </div><!-- /.navbar-collapse -->
    </div><!-- /.container -->
  </nav>
</header>
<!--Header End-->
<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages' , object: f.object %>
  <div class="field">
    <%= f.text_area :caption, placeholder: "Compose new post..." %>
  </div>
  <%= check_box("private Post",@post.is_public, {checked: false}) %>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>